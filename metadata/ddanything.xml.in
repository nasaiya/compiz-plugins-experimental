<?xml version="1.0"?>
<compiz>
  <plugin name="ddanything" useBcop="true">
    <_short>DropDown Anything</_short>
	<_long>Make any window a dropdown on shortcut key window like guake.</_long>
	<category>Window Management</category>
    <display>
      <group>
        <_short>Bindings</_short>
        <option name="trigger_key" type="key">
          <_short>Dropdown</_short>
          <_long>Toggles window state</_long>
          <default>&lt;Shift&gt;d</default>
        </option>
        <option name="trigger_all_key" type="key">
          <_short>Toggle decoration on desktop</_short>
          <_long>Toggles decoration of every window on the desktop.</_long>
          <default>&lt;Shift&gt;a</default>
        </option>
      </group>
    </display>
  </plugin>
</compiz>
